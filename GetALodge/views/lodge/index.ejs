<% layout('layouts/boilerplate')  %>
<div id="cluster-map"></div>
<br>
<div class="container mt-5 mb-5">   
<h1>All Lodges</h1>


<% for (let lodge of lodges.reverse()){ %>
<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <%if(lodge.images.length) {%>
            <img class="img-fluid" alt="" src="<%=lodge.images[0].url%>">
            <% }else {%>
            <img class="img-fluid" alt=""
                src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/YelpCamp/lz8jjv2gyynjil7lswf4.png">
            <% } %>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%=lodge.title%></h5>
                <p class="card-text"><%=lodge.description  %> </p>
                <p class="card-text">
                    <small class="text-muted"><%=lodge.location  %> </small>
                </p>
                <a href="/lodges/<%=lodge.id%>" class="btn btn-primary">View <%=lodge.title%> </a>
            </div>
        </div>
    </div>
</div>
<% } %>
<div class="mb-3">
</div>


<script>
    const mapToken = '<%- process.env.MAPBOX_TOKEN%>';
    const lodges = {
        features: '<%- JSON.stringify(lodges) %>'
    }
</script>

<script src="/scripts/clusterMap.js"></script>